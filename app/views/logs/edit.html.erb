<div class="list-group my-3">
  <div class="list-group-item list-group-item-action active font-bold">
    ログ編集
  </div>
  <div class="list-group-item">
    <%= form_with(model: @log, local: true) do |f| %>
    <%= render 'homes/error_messages', model: @log %>
      <form>
        <fieldset>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="">タイトル</label>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <label for="">画像</label>
                <%= f.attachment_field :image, class: "form-control-file" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="">本文</label>
                <%= f.text_area :body, rows: 10, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 text-right">
              <div class="form-group">
                <%= f.submit "更新", :class => "btn btn-primary" %>
                <%= link_to "削除",@log, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, :class => "btn btn-danger" %>
              </div>
            </div>
          </div>
        </fieldset>
      </form>
    <% end %>
  </div>
</div>
