<div class="list-group my-3">
  <div class="list-group-item list-group-item-action active font-bold">
    プロフィール編集
  </div>
  <div href="#" class="list-group-item">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'homes/error_messages', model: @user %>
      <form>
        <fieldset>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for=""><i class="fas fa-signature"></i> アカウント名</label>
                <%= f.text_field :name, class: "form-control" %>
                <small class="form-text text-muted">15文字以内</small>
              </div>
              <div class="form-group">
                <label for=""><i class="fas fa-user"></i> アイコン画像</label>
                <%= f.attachment_field :profile_image, class: "form-control-file" %>
              </div>
              <div class="form-group">
                <label for=""><i class="fas fa-paragraph"></i> 自己紹介</label>
                <%= f.text_area :introduction, rows: 10, class: "form-control" %>
                <small class="form-text text-muted">150字以内</small>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for=""><i class="fas fa-map-marker-alt"></i> 居住地</label>
                <%= f.text_field :address, class: "form-control" %>
              </div>
              <div class="form-group">
                <label for=""><i class="fab fa-twitter mr-1"></i> Twitter</label>
                <%= f.text_field :twitter_account, class: "form-control", :placeholder => "https://twitter.com/アカウント名" %>
              </div>
              <div class="form-group">
                <label for=""><i class="fab fa-instagram mr-1"></i> Instagram</label>
                <%= f.text_field :instagram_account, class: "form-control", :placeholder => "https://instagram.com/アカウント名" %>
              </div>
              <div class="form-group">
                <label for=""><i class="fab fa-facebook-square"></i> Facebook</label>
                <%= f.text_field :facebook_account, class: "form-control", :placeholder => "https://facebook.com/アカウント名" %>
              </div>
            </div>
        </div>
        <div class="row">
          <div class="col-md-12 text-right">
            <%= f.submit "更新", :class => "btn btn-primary" %>
            <%= link_to "退会",  user_registration_path, method: :delete, data: {confirm: "本当に退会してもよろしいですか？"}, :class => "btn btn-danger" %>
          </div>
        </div>

        </fieldset>
      </form>
    <% end %>
  </div>
</div>
