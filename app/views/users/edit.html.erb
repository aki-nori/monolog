<div class="row my-3">
  <div class="list-group">
    <a class="list-group-item list-group-item-action active">
      プロフィール編集
    </a>
    <div href="#" class="list-group-item">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'homes/error_messages', model: @user %>
        <form>
          <fieldset>
            <div class="form-group">
              <label for="">アカウント名</label>
              <%= f.text_field :name, class: "form-control" %>
              <small class="form-text text-muted">15文字以内</small>
            </div>
            <div class="form-group">
              <label for="">アイコン画像</label>
              <%= f.attachment_field :profile_image, class: "form-control-file" %>
            </div>
            <div class="form-group">
              <label for="">自己紹介</label>
              <%= f.text_area :introduction, rows: 10, class: "form-control" %>
              <small class="form-text text-muted">200字以内</small>
            </div>
            <div class="form-group">
              <label for="">居住地</label>
              <%= f.text_field :address, class: "form-control" %>
              <small class="form-text text-muted">入力条件</small>
            </div>
            <%= f.submit "更新", :class => "btn btn-primary" %>
          </fieldset>
        </form>
      <% end %>
    </div>
  </div>
</div>