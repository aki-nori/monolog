<!-- ユーザ情報を表示するサイドバー -->
<div class="card text-white bg-primary mb-3">
  <div class="card-header">
    <i class="fas fa-user"> ユーザー情報</i>
  </div>
  <div class="card-body">
    <table>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, fallback: "noimage.jpg", class: "rounded-circle user-card-user-image" %>
        </td>
        <td>
          <h6 class="card-title ml-2" style="">
            <%= user.name %>
          </h6>
          <div class="ml-2">
          <%= render 'users/follow', user: user %>
          </div>
        </td>
      </tr>
    </table>
    <p class="card-text user-card-user-intro">
      <%= user.introduction %>
    </p>
  </div>
  <div class="card-body text-center">
    <table style="width: 100%;">
      <tr class="user-card-count-record link-font-light">
        <td>
          <%= link_to followings_user_path(user) do %>
          <p class="user-card-record-count">
            <%= "#{user.followings.count}" %>
          </p>
          <p class="user-card-record-title">フォロワー</p>
          <% end %>
        </td>
        <td>
          <%= link_to followers_user_path(user) do %>
          <p class="user-card-record-count">
            <%= "#{user.followers.count}" %>
          </p>
          <p class="user-card-record-title">フォロー中</p>
          <% end %>
        </td>
        <td>
          <p class="user-card-record-count">
            <%= "#{user.items.count}" %>
          </p>
          <p class="user-card-record-title">アイテム</p>
        </td>
      </tr>
    </table>
    <div style="font-size: 6px; text-align: right; color: #AAA;">
      <i class="fas fa-map-marker-alt"></i>
      <%= " #{user.address}" %><br>
      <%= "#{user.created_at.strftime("%Y年%m月%d日")}に登録" %>
    </div>
  </div>
  <% if user == current_user %>
  <ul class="list-group list-group-flush link-font-light text-center">
    <li class="list-group-item bg-primary">
      <%= link_to like_item_path(user) do %>
        <i class="fas fa-thumbs-up"> いいねしたガジェット
          <span class="badge badge-light badge-pill"><%= "#{user.liked_items.count}"%></span>
        </i>
      <% end %>
    </li>
    <li class="list-group-item bg-primary">
      <%= link_to edit_user_path(current_user) do %>
        <i class="fas fa-user-edit"> プロフィール編集</i>
      <% end %>
    </li>
    <li class="list-group-item bg-primary">
      <%= link_to edit_user_registration_path do %>
        <i class="fas fa-key"> パスワード変更</i>
      <% end %>
    </li>
  </ul>
  <% end %>
</div>