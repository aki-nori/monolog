<% unless user == current_user %>
<% unless Relationship.exists?(following_id: user.id, follower_id: current_user.id) %>
<%= link_to relationships_path(params: {following_id: user.id}), method: :post do%>
<h5>
  <span class="badge badge-pill badge-info">following</span>
</h5>
<% end %>
<% else %>
<%= link_to relationship_path(user), method: :delete do %>
<h5>
  <span class="badge badge-pill badge-danger">unfollow</span>
</h5>
<% end %>
<% end %>
<% end %>