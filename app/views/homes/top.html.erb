<div class="row">
  <div class="col-md-12">
    <div class="card mt-3">
      <div class="card-body">
        <span class="font-bold mr-2">並び替え:</span>
        <%= link_to "いいね数順", top_path(params: {search_type: :like}), class: "btn btn-primary btn-sm mr-1" %>
        <%= link_to "最近のガジェット順", top_path(params: {search_type: :recent}), class: "btn btn-primary btn-sm mr-1" %>
        <%= link_to "ログ数順", top_path(params: {search_type: :log}), class: "btn btn-primary btn-sm mr-1" %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-3">
  <% @items.each do |item| %>
    <div class="col-lg-3 col-md-6">
      <%= render 'items/item_card', item: item %>
    </div>
  <% end %>
</div>
<%= paginate @items %>