.row.my-3
  .col-md-4
    .list-group
      %h5.list-group-item.list-group-item-action.active
        カテゴリー編集
      .list-group-item
        = form_with(model: @category, local:true) do |f|
          %form
            %fieldset
              .form-group
                %label
                  カテゴリー名
                = f.text_field :name, :class => "form-control"
              .form-group
                = f.submit "更新", :class => "btn btn-primary"
      = link_to "削除", category_path(@category), method: :delete, :class => "btn btn-danger mt-3"